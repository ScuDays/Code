<view class="container container-gray">
  <view class="group">
    <view class="group-header">基本信息</view>
    <view class="group-body">
      <view class="input-list">
        <view class="input-item">
          <text class="input-item-label">设备id</text>
          <view class="input-item-content">
            <input type="text" placeholder="请输入设备id" value="{{device_id}}" bindinput="inputdevice_id" ></input>
          </view>
        </view>
        <view class="input-item">
          <text class="input-item-label">设备名称</text>
          <view class="input-item-content">
            <input type="text" placeholder="请输入设备名称" value="{{device_name}}" bindinput="inputdevice_name" ></input>
          </view>
        </view>
        <view class="input-item">
          <text class="input-item-label">创建时间</text>
          <view class="input-item-content">
            <input type="text" placeholder="请输入创建时间" value="{{create_time}}" bindinput="inputcreate_time" ></input>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="btn-submit">
    <button class="btn-block btn-orange" bindtap="applySubmit">提交</button>
  </view>
</view>
